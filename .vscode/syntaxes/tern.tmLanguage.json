{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "tern",
  "scopeName": "source.tern",
  "fileTypes": ["tn"],
  "patterns": [
    {
      "match": "\\b(fn|if|else|while|for|return|break|continue|struct|enum|export|pub|and|or|mut|let|true|false)\\b",
      "name": "keyword.control.tern"
    },
    {
      "match": "//.*$",
      "name": "comment.line.double-slash.tern"
    },
    {
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.tern"
    },
    {
      "match": "\"[^\"]*\"",
      "name": "string.quoted.double.tern"
    },
    {
      "match": "'[^']*'",
      "name": "string.quoted.single.tern"
    },
    {
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b",
      "name": "constant.numeric.tern"
    },
    {
      "match": "(\\+|-|\\*|/|%|<|>|=|!|&|\\||\\^|~|\\?|:)",
      "name": "keyword.operator.tern"
    },
    {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": {
          "name": "entity.name.function.tern"
        }
      }
    }
  ]
}
